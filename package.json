{
  "name": "task-wolf-playwright",
  "version": "1.0.0",
  "description": "Automated testing framework for Hacker News using Playwright",
  "main": "index.js",
  "scripts": {
    "test": "npx playwright test",
    "test:headed": "npx playwright test --headed",
    "test:debug": "npx playwright test --debug",
    "test:ui": "npx playwright test --ui",
    "test:chrome": "npx playwright test --project=chromium",
    "test:firefox": "npx playwright test --project=firefox",
    "test:safari": "npx playwright test --project=webkit",
    "test:mobile": "npx playwright test --project='Mobile Chrome' --project='Mobile Safari'",
    "test:performance": "npx playwright test performance",
    "test:responsive": "npx playwright test responsive",
    "report": "npx playwright show-report",
    "install:browsers": "npx playwright install",
    "clean": "if exist test-results rmdir /s /q test-results && if exist playwright-report rmdir /s /q playwright-report"
  },
  "keywords": ["playwright", "testing", "automation", "hacker-news"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  }
}